    <%= form.label :portamalas %><br>
    <%= form.text_area :portamalas %>
  </div>

  <div>
    <%= form.label :arcondicionado %><br>
    <%= form.text_area :arcondicionado %>
  </div>

<div>
    <%= form.label :lugares %><br>
    <%= form.text_area :lugares %>
  </div>
  <div>
<%= form.select :fabricante_id, options_for_select(@fabricantes.map { |fabricante| [fabricante.nome, fabricante.id] }) %>
  </div>
  <div>
    <%= form.submit "Salvar", id: "submit-button" %>
  </div>

 <div>
