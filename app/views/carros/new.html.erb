<% end %>

<h1>Novo Carro </h1>

<%= form_with url: url_for(action: 'create' , controller: 'carros'), model: @carro do |form| %>
  <div>
    <%= form.label :nome %><br>
    <%= form.text_field :nome %>
  </div>

  <div>
    <%= form.label :informacao %><br>
    <%= form.text_area :informacao %>
  </div>
 
  <div>
    <%= form.label :ano %><br>
    <%= form.text_area :ano %>
  </div>

  <div>
    <%= form.label :portas %><br>
    <%= form.text_area :portas %>
  </div>

